<%= primer :base, **@kwargs do %>
  <% if heading.present? %>
    <%= primer :base, **heading.kwargs do %>
      <%= heading.content %>
    <% end %>
  <% end %>
  <% if actions.present? %>
    <%= primer :base, **actions.kwargs do %>
      <%= actions.content %>
    <% end %>
  <% end %>
  <% if description.present? %>
    <%= primer :base, **description.kwargs do %>
      <%= description.content %>
    <% end %>
  <% end %>
<% end %>
