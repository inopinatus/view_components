<%= primer :base, **kwargs do %>
  <% if avatar %>
    <%= primer :avatar, alt: avatar.alt, src: avatar.src, size: avatar.size, square: avatar.square, **avatar.kwargs %>
  <% end %>

  <% if badge %>
    <%= primer :base, **badge.kwargs do %>
      <%= octicon badge.icon %>
    <% end %>
  <% end %>

  <% if body %>
    <%= primer :base, **body.kwargs do %>
      <%= body.content %>
    <% end %>
  <% end %>
<% end %>
