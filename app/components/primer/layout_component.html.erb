<%= primer :flex, **@kwargs do %>
  <% if @side == :left %>
    <%= primer :base, tag: :div, classes: "flex-shrink-0", col: (@responsive ? [12, nil, @sidebar_col] : @sidebar_col), mb: (@responsive ? [4, nil, 0] : nil) do %>
      <%= sidebar %>
    <% end %>
  <% end %>

  <%= primer :base, tag: :div, classes: "flex-shrink-0", col: (@responsive ? [12, nil, @main_col] : @main_col), mb: (@responsive ? [4, nil, 0] : nil) do %>
    <%= main %>
  <% end %>

  <% if @side == :right %>
    <%= primer :base, tag: :div, classes: "flex-shrink-0", col: (@responsive ? [12, nil, @sidebar_col] : @sidebar_col) do %>
      <%= sidebar %>
    <% end %>
  <% end %>
<% end %>
