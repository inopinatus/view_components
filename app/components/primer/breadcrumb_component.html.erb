<%= primer :base, **@kwargs do %>
  <ol>
    <% items.each do |item| %>
      <%# The <li> and <a> need to be on the same line to prevent unwanted whitespace %>
      <%= primer :base, **item.kwargs do %><%- if item.href.present? %><a href="<%= item.href %>"><%= item.content %></a><%- else %><%= item.content %><%- end %><%- end %>
    <% end %>
  </ol>
<% end %>
